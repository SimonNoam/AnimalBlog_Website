<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/scripts/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js" defer></script>
    <link rel="stylesheet" href="~/Styles/myStylet.css" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <header class="back-color">
        <div>
            <h1 class="h1 text-center">The Best Animal Blog</h1>
        </div>
        <nav class="navbar navbar-expand-lg navbar-brand bg-dark navbar-dark" style="width:100%">
            <div class="container-fluid">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item px-3"> <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a> </li>

                    <li class="nav-item px-3"><a class="nav-link" asp-controller="Catalog" asp-action="Index">Catalog</a></li>
                   
                    @if(User.Identity.IsAuthenticated && User.IsInRole("Admin")){

                        <li class="nav-item px-3"><a class="nav-link" asp-controller="Admenistrator" asp-action="FrontPage">Front</a></li>

                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item px-3"><a class="nav-link" asp-controller="Acount" asp-action="Logout">Log Out</a></li>
                    }
                    else  {

                        <li class="nav-item px-3"><a class="nav-link" asp-controller="Acount" asp-action="Login">Log in</a></li>
                        <li class="nav-item px-3"><a class="nav-link" asp-controller="Acount" asp-action="Register">Register</a></li>
                    }
                </ul>
            </div>
        </nav>
    </header>
    <div>
        @RenderBody()
    </div>
</body>
</html>
