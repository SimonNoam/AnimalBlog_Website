@model AnimalViewModel

<div class="container col-width">
    <div class="col"><br />
        <div class="form-group">
            <br /><h3>Admin Only</h3><br />
        </div>
        <form enctype="multipart/form-data" method="post" class="form-inline justify-content-center">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" style="color:red"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" style="color:red"></span>
            </div>
            <div class="form-group">
                <label asp-for="PictureName"></label>
                <div class="custom-file">

                <input asp-for="PictureName" class="form-control custom-file-input"/>
                <label class="custom-file-label">Choose File...</label>
                </div>
                <span asp-validation-for="PictureName" style="color:red"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" style="color:red"></span>
            </div>
            <div class="form-group">

                <span> Please Choose your Category: </span>
                <select asp-for="CategoryId" class="admen-select myselect-option">
                    <option></option>
                    @foreach (var category in ViewBag.categories)
                    {
                        <option class="myselect-child" value="@category.CategoryId">@category.Name</option>
                    }
                </select>
                <br />
                <span asp-validation-for="CategoryId" style="color:red"></span>
            </div>

            <div class="form-group">
                <br /><input type="submit" value="Add To Blog" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>