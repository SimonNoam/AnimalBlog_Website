@model LoginPage
@{
    ViewData["Title"] = "Login";
}

<body style="background-color:#86EFAC">
<div class="container col-width">
    <div class="col">
        <div class="form-group">
                <br /><h2>Login</h2><br />
        </div>
        <form method="post" class="form-inline justify-content-center">
            <div class="form-group">
                <label asp-for="User"></label>
                <input asp-for="User" class="form-control" />
                    <span asp-validation-for="User" style="color:red"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password" style="color:red"></span>
            </div>
            <div class="form-group">
                <br /><input type="submit" value="log in" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>
</body>