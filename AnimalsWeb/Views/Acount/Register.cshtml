@model RegisterPage
@{
    ViewData["Title"] = "Register";
}

<body style="background-color:#86EFAC">
    <div class="container col-width">
        <div class="col">
            <div class="form-group">
                <br /><h2>Register</h2><br />
            </div>
            <form method="post" class="form-inline justify-content-center">
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" style="color:red"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" style="color:red"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" style="color:red"></span>
                </div>
                <div class="form-group">
                    <br /><input type="submit" value="Register" class="btn btn-outline-dark" />
                </div>
            </form>
        </div>
    </div>
</body>
